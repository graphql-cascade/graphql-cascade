{
  "id": "TC-C-001",
  "name": "Normalized Cache Updates",
  "description": "Clients MUST update normalized cache entities when processing cascade responses with entity updates",
  "category": "client",
  "subcategory": "cache-updates",
  "requirement": "REQ-101",
  "priority": "critical",
  "input": {
    "clientState": {
      "cache": {
        "User:user_123": {
          "__typename": "User",
          "id": "user_123",
          "name": "John Doe",
          "email": "john@example.com"
        }
      },
      "queries": [
        {
          "query": "query GetUser($id: ID!) { user(id: $id) { id name email } }",
          "variables": { "id": "user_123" },
          "result": {
            "user": {
              "__typename": "User",
              "id": "user_123",
              "name": "John Doe",
              "email": "john@example.com"
            }
          }
        }
      ]
    }
  },
  "expected": {
    "clientState": {
      "cache": {
        "User:user_123": {
          "__typename": "User",
          "id": "user_123",
          "name": "Jane Doe",
          "email": "jane@example.com"
        }
      },
      "invalidatedQueries": []
    }
  },
  "tags": ["normalized-cache", "cache-updates", "client"]
}