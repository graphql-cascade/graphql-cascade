{
  "id": "TC-S-010",
  "name": "Basic Cascade Response Structure",
  "description": "Servers MUST return a cascade response with updated, invalidations, and metadata fields in the correct structure",
  "category": "server",
  "subcategory": "response-building",
  "requirement": "REQ-010",
  "priority": "critical",
  "input": {
    "mutation": "mutation UpdateUser($id: ID!, $name: String!) { updateUser(id: $id, name: $name) { id name } }",
    "context": {
      "variables": {
        "id": "user_1",
        "name": "Updated Name"
      },
      "entities": [
        { "__typename": "User", "id": "user_1", "name": "Original Name" }
      ]
    }
  },
  "expected": {
    "cascade": {
      "updated": [
        { "__typename": "User", "id": "user_1", "name": "Updated Name" }
      ],
      "invalidations": [],
      "metadata": {
        "affectedCount": 1,
        "operationType": "UPDATE"
      }
    }
  },
  "tags": ["response-structure", "basic", "mutation"]
}
