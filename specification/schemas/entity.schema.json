{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://graphql-cascade.org/schema/v1/entity",
  "title": "Entity Structures",
  "description": "JSON Schema definitions for entity structures in GraphQL Cascade",
  "definitions": {
    "UpdatedEntity": {
      "type": "object",
      "description": "Represents an entity that was created or updated",
      "required": ["__typename", "id", "operation", "entity"],
      "properties": {
        "__typename": {
          "type": "string",
          "description": "Type name of the entity (e.g., 'User', 'Company')",
          "minLength": 1
        },
        "id": {
          "type": "string",
          "description": "ID of the entity",
          "minLength": 1
        },
        "operation": {
          "type": "string",
          "description": "The operation performed",
          "enum": ["CREATED", "UPDATED", "DELETED"]
        },
        "entity": {
          "description": "The full entity data (schema-defined entity interface)",
          "oneOf": [
            {
              "type": "object"
            },
            {
              "type": "array"
            },
            {
              "type": "string"
            },
            {
              "type": "number"
            },
            {
              "type": "boolean"
            },
            {
              "type": "null"
            }
          ]
        }
      },
      "examples": [
        {
          "__typename": "User",
          "id": "123",
          "operation": "UPDATED",
          "entity": {
            "id": "123",
            "name": "John Doe",
            "email": "john@example.com",
            "company": {
              "__typename": "Company",
              "id": "456",
              "name": "Acme Corp"
            }
          }
        }
      ]
    },
    "DeletedEntity": {
      "type": "object",
      "description": "Represents an entity that was deleted",
      "required": ["__typename", "id", "deletedAt"],
      "properties": {
        "__typename": {
          "type": "string",
          "description": "Type name of the deleted entity",
          "minLength": 1
        },
        "id": {
          "type": "string",
          "description": "ID of the deleted entity",
          "minLength": 1
        },
        "deletedAt": {
          "type": "string",
          "description": "When the entity was deleted (ISO 8601)",
          "format": "date-time"
        }
      },
      "examples": [
        {
          "__typename": "User",
          "id": "123",
          "deletedAt": "2023-11-26T10:30:00Z"
        }
      ]
    }
  },
  "oneOf": [
    { "$ref": "#/definitions/UpdatedEntity" },
    { "$ref": "#/definitions/DeletedEntity" }
  ]
}